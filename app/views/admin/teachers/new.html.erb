
<%=form_for(@tea,url: {:controller => 'teachers',:action =>'create' },html:{method: :post})do|f| %>
    <p>
      <%= f.label :姓名 %>
      <%= f.text_field :tname, size: 10%>
      <%= f.label :性别 %>
      <%= f.select :tsex,[["女",1],["男",0]] %>
      <%= f.label :系部 %>
      <%= f.select :tdepartmentNo, (@de.collect { |p| [p.dename,p.id] } )%>
    </p>
    <p>
      <%=f.submit "提交"%>
    </p>
<% end %>
