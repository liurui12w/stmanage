
<%=form_for(@stus,url: {:controller => 'students',:action =>'create' },html:{method: :post})do|f| %>
    <p>
      <%= f.label :姓名 %>
      <%= f.text_field :name, size: 12%>
      <%= f.label :年龄 %>
      <%= f.text_field :age, size: 8%>
      <%= f.label :性别 %>
      <%= f.select :sex,[["女",1],["男",0]] %>
      <%= f.label :系部 %>
      <%= f.select :departmentNo, (@de.collect { |p| [p.dename,p.id] } )%>
    </p>
    <p>
      <%=f.submit "提交"%>
    </p>
<% end %>
